extends main


block head
    - var headData = {title: "Главная"}
    - var breadcrumb = true
    - var index = 'header_index'

    link(href="%=static=%css/separate-css/slick.css", rel="stylesheet", type="text/css")

block content
    .slider-index.dots-two
        .slider-index-dotsBlock: .container: .slider-index-dotsBlock-dots
        .slider-index-el
            -for(var i = 0; i<3; i++)
                .slider-index__section.text-center(style="background-image: url('%=static=%img/content/slider-index.jpg');").ttu
                    .container
                        .slider-index__table
                            .slider-index__table-cell
                                p.slider-index__title Оборудование
                                    br
                                    |для автоматизации
                                p.slider-index__titleSub технологических процессов

    .container.container_before
        .advantages
            .advantages__section
                .advantages__item
                    .advantages__item-icon: +img('content/advantages/advantages-1', 'png')
                    .advantages__item-desc
                        p.advantages__item-title Оборудование и комплектующие
                            br
                            |для вашего производства
                        p.advantages__item-text Индивидуальный подход позволяет подобрать
                            br
                            | оптимальное оборудование в зависимости
                            br
                            | от задач клиента

            .advantages__section
                .advantages__item
                    .advantages__item-icon: +img('content/advantages/advantages-2', 'png')
                    .advantages__item-desc
                        p.advantages__item-title Доставка в любую точку России,
                            br
                            |в короткий срок
                        p.advantages__item-text Работаем также в случаях повышенной
                            br
                            |срочности, оперативно решим проблему
                            br
                            |ваших производственных процессов


    .line-dashed.line-dashed_right: .container


block script
    script(src="%=static=%js/separate-js/slick.min.js" type="text/javascript")
